# App
NODE_ENV=development
APP_PORT=3000
APP_NAME=KHAO_DELIVERY

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=khao_user
DATABASE_PASSWORD=khao_pass_secure
DATABASE_NAME=khao_db
DATABASE_LOGGING=false

# MongoDB
MONGODB_URI=mongodb://mongo:27017/khao_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-min-32-chars-long-here
JWT_EXPIRATION=3600
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-long
JWT_REFRESH_EXPIRATION=604800

# OTP Service (Twilio or AWS SNS)
OTP_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890
AWS_SNS_REGION=ap-southeast-1

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION=ap-southeast-1
AWS_S3_BUCKET=khao-app-bucket
AWS_S3_BASE_URL=https://khao-app-bucket.s3.ap-southeast-1.amazonaws.com

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
OMISE_SECRET_KEY=skey_test_your_omise_key
OMISE_PUBLIC_KEY=pkey_test_your_omise_key

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-email

# WhatsApp Cloud API
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Email Service (SendGrid or Mailgun)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_API_KEY=your-mailgun-key

# Twilio (Masked Calling)
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# System Configuration
DELIVERY_RADIUS_KM=10
ORDER_TIMEOUT_MINUTES=30
CART_EXPIRY_HOURS=24
OTP_EXPIRY_MINUTES=10
COMMISSION_PERCENTAGE=15
